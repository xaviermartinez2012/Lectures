<Window x:Class="Layouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="MainWindow" Height="210.594" Width="348.517" FontSize="18">
   <StackPanel >
      <StackPanel.Resources>
         <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="0,2,0,0"/>
         </Style>
      </StackPanel.Resources>
      <Label>Choose a layout to demo:</Label>
      <Button x:Name="mWrapBtn" Click="mWrapBtn_Click">Wrap Panel</Button>
      <Button x:Name="mDockBtn" Click="mDockBtn_Click">Dock Panel</Button>
      <Button x:Name="mStackBtn" Click="mStackBtn_Click">Stack Panel</Button>
      <Button x:Name="mGridBtn" Click="mGridBtn_Click">Grid Layout</Button>
   </StackPanel>
</Window>
